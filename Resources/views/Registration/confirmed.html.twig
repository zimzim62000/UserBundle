{% extends '::base.html.twig' %}

{% block title %}
    {{ 'views.user.registration.confirmed.title'|trans }}
{% endblock %}


{% block page %}

    <h1 class="text-center title headerpagehome">{{ 'views.user.registration.confirmed.title'|trans }}</h1>

    <h2 class="alert-box success text-center">
        {{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}
    </h2>

    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}
            <a href="{{ targetUrl }}">
                <span class="icon-arrow-left icon-medium"></span>
                {{ 'registration.back'|trans({}, 'FOSUserBundle') }}
            </a>
        {% endif %}
    {% endif %}

{% endblock page %}
